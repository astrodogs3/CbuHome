<h1>New line_item</h1>

<% form_for(@line_item) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :cbu_id %><br />
    <%= f.text_field :cbu_id %>
  </p>
  <p>
    <%= f.label :order_id %><br />
    <%= f.text_field :order_id %>
  </p>
